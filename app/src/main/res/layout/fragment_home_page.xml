<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <SearchView
        android:id="@+id/searchHomePage"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="11dp"
        android:iconifiedByDefault="false"
        android:queryHint="Search for Reminder or Group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/createReminder"
        android:layout_width="370dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@color/teal_200"
        android:text="+ Create New Reminder +"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchHomePage"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/deadlineReminder"
        android:layout_width="110dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="@color/teal_200"
        android:text="DeadLine"
        app:layout_constraintEnd_toStartOf="@+id/allReminder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createReminder"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/allReminder"
        android:layout_width="100dp"
        android:layout_height="59dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/teal_200"
        android:text="All"
        app:layout_constraintEnd_toStartOf="@+id/completedReminder"
        app:layout_constraintStart_toEndOf="@id/deadlineReminder"
        app:layout_constraintTop_toBottomOf="@+id/createReminder"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/completedReminder"
        android:layout_width="126dp"
        android:layout_height="59dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@color/teal_200"
        android:text="Completed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/allReminder"
        app:layout_constraintTop_toBottomOf="@+id/createReminder"
        tools:ignore="MissingConstraints" />




</androidx.constraintlayout.widget.ConstraintLayout>
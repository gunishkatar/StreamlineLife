<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <SearchView
        android:id="@+id/searchHomePage"
        android:layout_width="380dp"
        android:layout_height="30dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="15dp"
        android:iconifiedByDefault="false"
        android:queryHint="Search for Reminder or Group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/createReminder"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@color/teal_200"
        android:text="@string/create_new_reminder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchHomePage"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/deadlineReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/teal_200"
        android:text="@string/deadline"
        app:layout_constraintEnd_toStartOf="@+id/allReminder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createReminder"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/allReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="9dp"
        android:backgroundTint="@color/teal_200"
        android:text="@string/all"
        app:layout_constraintEnd_toStartOf="@+id/completedReminder"
        app:layout_constraintStart_toEndOf="@id/deadlineReminder"
        app:layout_constraintTop_toBottomOf="@+id/createReminder"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/completedReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="18dp"
        android:backgroundTint="@color/teal_200"
        android:text="@string/completed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/allReminder"
        app:layout_constraintTop_toBottomOf="@+id/createReminder"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/GroupnameInHomePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="25dp"
        android:text="@string/groups"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deadlineReminder"
        tools:ignore="MissingConstraints" />

    <!--
        change size of the add button (i took this maxImageSize) take from the given link
        Article title: Adjust icon size of Floating action button (fab)
        URL: https://stackoverflow.com/questions/27484126/adjust-icon-size-of-floating-action
        -button-fab
        Website title: Stack Overflow
        Date accessed: March 11, 2022
        Date published: November 01, 1962
    -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addGroup"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="243dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/GroupnameInHomePage"
        app:layout_constraintTop_toBottomOf="@+id/completedReminder"
        app:srcCompat="@drawable/ic_baseline_add_24"
        app:maxImageSize="40dp"
        tools:ignore="MissingConstraints" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="275dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="7dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>